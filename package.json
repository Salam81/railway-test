{
  "name": "railway-test",
  "version": "1.0.0",
  "private": true,
  "devDependencies": {
    "@biomejs/biome": "2.2.7",
    "@types/bun": "^1.3.x",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "----DATABASE----": "",
    "db:generate": "bun --filter @railway-test/db db:generate",
    "db:migrate": "bun --filter @railway-test/db db:migrate",
    "clean:modules": "bash -lc 'find . -type d -name node_modules -prune -print -exec rm -rf {} \\; && rm -f bun.lock'"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "elysia": "1.4.12",
      "@elysiajs/eden": "1.4.4"
    }
  },
  "packageManager": "bun@1.3.0",
  "engines": {
    "bun": ">=1.3.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,css,md,json}": [
      "bunx --bun biome check --write --unsafe"
    ]
  }
}
